def shapeArea(n):
    longestlength = n + (n - 1)
    answer = solution(longestlength)
    return answer + (answer - longestlength)


def solution(n):
  ans = 0
  while True:
      if n <= 1:
          return ans + 1
      ans += n
      n -= 2
  
